<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>
    <!-- Doze: does this device support STATE_DOZE?  -->
    <bool name="doze_display_state_supported">true</bool>
    <bool name="config_showRotationLock">false</bool>
    <bool name="doze_double_tap_reports_touch_coordinates">true</bool>
    <bool name="doze_suspend_display_state_supported">true</bool>
    <string name="doze_brightness_sensor_type">com.google.sensor.binned_brightness</string>

    <!-- Should we vibrate on an icon animation of the shelf. This should only be active if the
     vibrator is capable of subtle vibrations -->
    <bool name="config_vibrateOnIconAnimation">true</bool>

    <!-- FPSInfoService Fps file path -->
    <string name="config_fpsInfoSysNode" translatable="false">/sys/class/drm/sde-crtc-0/measured_fps</string>

    <dimen name="config_buttonCornerRadius">20.0dp</dimen>
    <dimen name="config_dialogCornerRadius">20.0dp</dimen>
</resources>
